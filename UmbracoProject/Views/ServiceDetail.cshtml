@using Umbraco.Cms.Web.Common.PublishedModels;
@using UmbracoProject.ViewModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ServiceDetail>;
@{
	Layout = "mainLayout.cshtml";
}

<partial name="Partials/Layout/_PageHeader" model="(IPageHeader)Model" />

<section class="py-16">
	<div class="max-w-7xl mx-auto px-4">
		<div class="flex flex-row justify-between">

            <aside class="w-3/12 flex flex-col gap-8">

                @Html.GetBlockListHtml(Model.ServiceDetailAsides)

                <div class="bg-primary p-6">
                    <h2 class="text-white text-xl font-semibold mb-2">How can we help you?</h2>
                    <p class="text-white-100 text-sm mb-4">
                        Online support 24/7, we are here to help you
                    </p>

                    <form class="flex flex-col gap-3">
                        <div class="relative">
                            <input type="email"
                                   name="email"
                                   placeholder="E-mail address"
                                   class="w-full bg-white-100 py-3 px-4 pr-12 text-sm text-gray-900 placeholder-gray-400"
                                   required />
                            <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 text-secondary">
                                <i class="fa-solid fa-envelope"></i>   
                            </button>
                        </div>
                    </form>
                </div>

            </aside>

			
			


			<div class="block w-px bg-border-gray"></div>


			<div class="w-8/12 flex flex-col gap-2">
				<div class="rte">@Html.Raw(Model.ServiceDetailBody)</div>
			</div>
            

		</div>
	</div>



    
</section>
    <partial name="Partials/Forms/_QuestionForm" model="new QuestionFormViewModel()" />

    @Html.GetBlockListHtml(Model.ServiceDetailContactInfo)