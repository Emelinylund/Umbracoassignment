@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutUsReviewSection)Model.Content;


}

<section class="w-full bg-gray-100 py-16">
    <div class="flex flex-col md:flex-row-reverse items-center justify-center gap-10 md:gap-20 max-w-6xl mx-auto px-6">
        <!-- Right side: Image -->
        <div class="w-full md:w-[45%] flex justify-center relative">
            <img src="@content.AboutUsReviewImage.Url()" alt="About Us Image"
                 class="rounded-lg shadow-lg max-w-sm w-full object-cover" />
        </div>

        <!-- Left side: Text content -->
        <div class="w-full md:w-[45%] space-y-6">
            <h2 class="text-sm font-semibold text-secondary tracking-widest uppercase mb-2">
                @content.AboutUsReviewSectionLabel
            </h2>

            <h1 class="text-4xl font-extrabold text-gray-800 leading-tight">
                @content.AboutUsReviewTitle
            </h1>

            <p class="text-gray-600 text-lg leading-relaxed">
                @content.AboutUsReviewText
            </p>

            <div class="flex items-center space-x-1 text-500">
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
            </div>

            <div>
                <p class="font-semibold text-gray-800">Kevin Gardner</p>
                <p class="text-gray-500">Swebank</p>
            </div>
        </div>

        </div>
    </div>
</section>





