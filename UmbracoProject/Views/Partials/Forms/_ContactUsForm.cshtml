@using UmbracoProject.ViewModels
@model ContactUsFormViewModel

@using (Html.BeginUmbracoForm("HandleContactUsForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "contactUsForm" }))
{
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
        <div>
            <label asp-for="Name" class="sr-only"></label>
            <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)"
                   class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:outline-none" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Phone" class="sr-only"></label>
            <input asp-for="Phone" type="text" placeholder="@Html.DisplayNameFor(x => x.Phone)"
                   class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:outline-none" />
            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="sr-only"></label>
            <input asp-for="Email" type="email" placeholder="@Html.DisplayNameFor(x => x.Email)"
                   class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:outline-none" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="SelectedOption" class="sr-only"></label>
            <select asp-for="SelectedOption"
                    class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:outline-none">
                <option value="" disabled hidden selected>Please select an option</option>
                <option value="Financial consulting">Financial consulting</option>
                <option value="Business">Business</option>
                <option value="Tax planning">Tax planning</option>
            </select>
            <span asp-validation-for="SelectedOption" class="text-red-500 text-sm"></span>
        </div>

        <div class="md:col-span-2 text-center mt-4">
            <button type="submit"
                    class="bg-primary text-white font-semibold py-3 px-10 rounded-md hover:bg-primary/90 transition-all">
                Submit
            </button>
        </div>
    </div>
}
