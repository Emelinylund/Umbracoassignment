            "meta": {
                "alias": "OnatrixStyleMenu",
                "icon": "icon-palette",
                "label": "Onatrix styles"
            },
            "items": [
                {
                    "label": "Paragraphs",
                    "items": [
                        {
                            "label": "XL - 20",
