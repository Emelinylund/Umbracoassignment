{
    "name": "Onatrix RTE",
    "alias": "Onatrix.Rte",
    "css": [ "/App_Plugins/OnatrixRte/onatrix-rte.css" ],
    "extensions": [
        {
            "type": "tiptapToolbarExtension",
            "kind": "styleMenu",
            "alias": "Onatrix.Tiptap.StyleMenu",
