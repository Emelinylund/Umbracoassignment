                                {
                                    "label": "Light",
                                    "data": {
                                        "tag": "p",
                                        "class": "xl-font-light"
                                    }
                                },
                                {
                                    "label": "Light Italic",
                                    "data": {
                                        "tag": "p",
                                        "class": "xl-font-light-italic"
                                    }
                                },
                                {
                                    "label": "Normal",
                                    "data": {
                                        "tag": "p",
                                        "class": "xl-font"
                                    }
                                },
                                {
                                    "label": "Bold",
                                    "data": {
                                        "tag": "p",
                                        "class": "xl-font-bold"
                                    }
                                },
                                {
                                    "label": "Italic",
                                    "data": {
                                        "tag": "p",
                                        "class": "xl-font-italic"
                                    }
                                }
                            ]
                        },
                        {
                            "label": "L - 18",
